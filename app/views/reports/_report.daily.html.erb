<html>
<head>

</head>
<style>
    .uppercase {
        text-transform: uppercase;
    }

    .semibold {
        font-weight: 600 !important;
    }

    table, tr {
        width: 100%;
    }

    .w-1OO {
        width: 100%;
    }

    table td, table th {
        padding: 8px;
    }

    .bordered td {
        border-bottom: 2px solid #000;
    }

    .center {
        text-align: center;
    }

</style>
<body>
<div>
  <table style="width: 100%">
    <tr>
      <td style="width: 25%">
        <div class="uppercase semibold">
          <span>Pages Views</span>
        </div>
        <div><span><%= @stats['views'] %></span></div>
      </td>
      <td style="width: 25%">
        <div class="uppercase semibold">
          <span>Campaigns</span>
        </div>
        <div><span><%= @stats['campaigns'] %></span></div>
      </td>
      <td style="width: 25%">
        <div class="uppercase semibold">
          <span>Referers</span>
        </div>
        <div><span><%= @stats['referers'] %></span></div>
      </td>
      <td style="width: 25%">
        <div class="uppercase semibold">
          <span>Devices</span>
        </div>
        <div><span><%= @stats['devices'] %></span></div>
      </td>
    </tr>
  </table>
  <br/>
  <div class="semibold">Top ten pages</div>
  <table class="bordered" border-separate="0" cellpadding="0" cellspacing="0">
    <% @views.each do |entry| %>
      <tr>
        <td>
                <span><%= entry['url'] %>
                  <% if (entry['url'] == '/') || !entry['url'] %> <span style="color: blue"> (Home page)</span> <% end %> </span>
        </td>
        <td><%= entry['vcount'] %></td>
      </tr>
    <% end %>
  </table>
  <table>
    <tbody>
    <tr>
      <td>
        <div class="semibold">
          <span>Views</span>
        </div>
      </td>
    </tr>
    <tr>
      <td class="w-1OO center">
        <img style="width: 500px;height: auto" src="<%= @views_img %>"/>
      </td>
    </tr>
    <tr>
      <td>
        <div class="semibold">
          <span>Devices </span>
        </div>
      </td>
    </tr>
    <tr>


      <td class="w-1OO center">
        <img style="width: 500px;height: auto" src="<%= @devices_img %>"/>
      </td>
    </tr>
    <tr>
      <td>
        <div class="semibold">
          <span>Geo </span>
        </div>
      </td>
    </tr>
    <tr>

      <td class="w-1OO center">
        <img style="width: 800px" src="<%= @geo_img %>"/>
      </td>
    </tr>
    </tbody>
  </table>
</div>

</body>

</html>