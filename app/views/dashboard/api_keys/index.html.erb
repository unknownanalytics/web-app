<p id="notice"><%= notice %></p>

<h1><%= t('Create a new api key for ') %> <%= current_domain.name %>

</h1>

<%= render 'form', api_key: @api_key %>

<h1><%= current_domain.name %> Api Keys</h1>

<table class="table is-fullwidth">
  <thead>
  <tr>
    <th><%= t('alias') %></th>
    <th><%= t('public key') %></th>
    <th>  <%= render :partial => 'includes/icon', :locals => {:icon => 'icon-dots-horizontal'} %></th>
  </tr>
  </thead>

  <tbody>
  <% @api_keys.each do |api_key| %>
    <tr>
      <td><%= api_key.alias %></td>
      <td><%= api_key.public_key %></td>
      <!--<td><%= link_to 'Show', dashboard_domain_api_key_path(api_key.domain, api_key) %></td>-->
      <td>
        <%= link_to(dashboard_domain_api_key_path(api_key.domain, api_key), method: :delete, data: {confirm: 'Are you sure?'}) do %>
          <%= t('Destroy') %>
          <%= render :partial => 'includes/icon', :locals => {:icon => 'icon-trash'} %>
        <% end %>
      </td>
    </tr>
  <% end %>
  <tbody>
  </table>