<%= form_with(model: [:dashboard, :domain, api_key], local: true) do |form| %>
  <% if api_key.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(api_key.errors.count, "error") %> prohibited this dashboard_api_key from being saved:</h2>

      <ul>
        <% api_key.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <label class="label"><%= t('Alias') %></label>
    <div class="field-body">
      <div class="field">
        <p class="control">
          <%= form.text_field(:alias, {class: "input"}) %>
        </p>
        <p class="help">
          <%= t('Alias to api_key, prod_..') %>
        </p>
      </div>
    </div>
  </div>
  <div class="field is-grouped">
    <div class="control">
      <%= form.submit({class: 'button is-primary'}) %>
    </div>
  </div>
<% end %>
