<h1>New Domain</h1>
<%= render 'form', domain: @domain %>
<h1>Domains</h1>
<table class="table">
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% if @domains.empty? %>
    Empty
  <% end %>
  <% @domains.each do |domain| %>
    <tr>
      <td><%= domain.name %></td>
      <td><%= link_to 'Show', [:dashboard, domain] %></td>
      <td><%= link_to 'Edit', edit_dashboard_domain_path(domain) %></td>
      <td><%= link_to 'Destroy', [:dashboard, domain], method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

